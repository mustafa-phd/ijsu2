---
const {head, data, foot} = Astro.props
---
<div class="table-responsive">
	<table class="table table-striped table-hover">
	{head && (
		<thead>
			<tr>
			{head.map(header => (
				<th scope="col">{header}</th>
			))}
				<th scope="col">الإجراءات</th>
			</tr>
		</thead>
	)}
		<tbody class="table-group-divider">
		{data.map(row => (
			<tr>
				<th scope="row">{row[0]}</th>
			{row.slice(1).map(col => (
				<td>{col}</td>
			))}
				<td><button type="button" class="btn btn-primary me-2">تعديل</button><button type="button" class="btn btn-danger">حذف</button></td>
			</tr>
		))}
		</tbody>
	{foot && (
		<tfoot>
			<tr>
			{foot.map(footer => (
				<th scope="col">{footer}</th>
			))}
			</tr>
		</tfoot>
	)}
	</table>
</div>